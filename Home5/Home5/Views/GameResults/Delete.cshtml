@model Home5.Models.GameResult

@{
    ViewBag.Title = "Удалить";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Удалить</h2>

<h3>Вы уверены что хотите удалить эту запись?</h3>
<div>
    <h4>Результат игры</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Результат игры
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Result)
        </dd>

        <dt>
            Первый игрок
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FirstPlayer)
        </dd>

        <dt>
            Второй игрок
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SecondPlayer)
        </dd>

        <dt>
            Количество ходов
        </dt>

        <dd>
            @Html.DisplayFor(model => model.StepsCount)
        </dd>

        <dt>
            Дата игры
        </dt>

        <dd>
            @Html.DisplayFor(model => model.GameTime)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Удалить" class="btn btn-default" /> |
            @Html.ActionLink("Надад", "Index")
        </div>
    }
</div>
